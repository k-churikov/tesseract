{
    "root": "./dist",
    "favicon": {
      "master": "./favicon.png",
      "dev": "./favicon.ico"
    },
    "templates": {
      "pages": "./src/views/pages/*.pug",
      "src": "./src/views/**/*.pug",
      "html": "./dist/*.html",
      "dest": "./dist"
    },
    "styles": {
      "main": "./src/styles/main.scss",
      "src": "./src/styles/**/*.scss",
      "pxtorem": "./dist/styles/**/*.css",
      "dest": "./dist/styles"
    },
    "images": {
      "src": "./src/images/**/*",
      "icons": "./src/images/icons/*.*",
      "masterFavicon": "./src/images/favicons/_favicon.png",
      "favicons": "./src/images/favicons/",
      "dest": "./dist/images"
    },
    "fonts": {
      "src": "./src/fonts/**/*",
      "dest": "./dist/fonts"
    },
    "scripts": {
      "src": "./src/scripts/*.js",
      "dest": "./dist/scripts"
    },
    "sprite": {
      "src": "./src/images/icons/**/*.png",
      "dest": "./dist/images/icons",
      "imgLocation": "/images/icons/sprite.png",
      "distFile": "./src/styles/sprite"
    },
    "svg": {
      "src": "./src/images/icons/**/*.svg",
      "distFile": "./src/styles/helpers",
      "dest": "./dist/images/icons"
    }
  }